<!-- app/views/appointments/find.html.erb -->

<div class="container mx-auto px-4 py-8 max-w-md">
  <h2 class="text-2xl font-bold mb-4 text-center">Manage Your Appointment</h2>
  <p class="text-gray-700 mb-6 text-center">Enter your unique appointment code below to view, edit, or cancel your appointment.</p>

  <%= form_with url: find_appointments_path, method: :post, local: true, class: "space-y-4" do |form| %>
    <!-- Appointment Code Field -->
    <div>
      <%= form.label :unique_code, "Appointment Code", class: "block text-lg font-medium text-gray-700 mb-2" %>
      <%= form.text_field :unique_code, class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div class="text-center">
      <%= form.submit "Find Appointment", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition-colors duration-200" %>
    </div>
  <% end %>
</div>
