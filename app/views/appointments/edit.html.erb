<!-- app/views/appointments/edit.html.erb -->
<div class="max-w-xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-center mb-2">Cancelar cita</h1>
  <p class="text-center text-gray-600 mb-6">Revisa la información antes de continuar.</p>

  <% status_key   = (@appointment.status.presence || "scheduled").to_s %>
  <% status_label = human_status(status_key) %>



  <% status_class =
       case status_key
       when "scheduled" then "bg-green-100 text-green-800"
       when "canceled_by_admin", "canceled_by_client" then "bg-red-100 text-red-800"
       else "bg-gray-100 text-gray-800"
       end %>

  <div class="bg-white rounded-lg shadow p-6 space-y-4">
    <div class="flex items-center justify-between">
      <span class="text-sm font-medium text-gray-500">Estado</span>
      <span class="px-2 py-1 rounded text-xs <%= status_class %>"><%= status_label %></span>




    </div>

    <dl class="divide-y divide-gray-100">
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Paciente</dt>
        <dd class="text-sm font-medium text-gray-900"><%= @appointment.name %></dd>
      </div>
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Edad</dt>
        <dd class="text-sm font-medium text-gray-900"><%= @appointment.age %></dd>
      </div>
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Médico</dt>
        <dd class="text-sm font-medium text-gray-900"><%= @appointment.doctor&.name %></dd>
      </div>
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Paquete</dt>
        <dd class="text-sm font-medium text-gray-900"><%= @appointment.package&.name %></dd>
      </div>
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Fecha y hora</dt>
        <dd class="text-sm font-medium text-gray-900">
          <%= l(@appointment.start_date, format: :long) %> – <%= l(@appointment.end_date, format: :long) %>
        </dd>
      </div>
      <div class="py-3 flex justify-between gap-4">
        <dt class="text-sm text-gray-500">Código único</dt>
        <dd class="text-sm font-mono text-gray-900"><%= @appointment.unique_code %></dd>
      </div>
    </dl>

    <div class="rounded-md border border-amber-200 bg-amber-50 p-3 text-amber-800 text-sm">
      Al cancelar, se liberará este horario para otros pacientes. Esta acción no se puede deshacer.
    </div>
  </div>

  <div class="mt-6 flex items-center justify-between gap-3">
    <%= link_to "Volver", root_path,
          class: "px-4 py-2 rounded-md border border-gray-300 text-gray-700 hover:bg-gray-50" %>

    <%= button_to "Cancelar cita",
          appointment_path(@appointment),
          method: :delete,
          form: { data: { turbo_confirm: "¿Seguro que deseas cancelar esta cita?" } },
          class: "px-4 py-2 rounded-md bg-red-600 text-white hover:bg-red-700" %>
  </div>
</div>
