<% ts = local_assigns[:time_slot].presence %>

<% if ts.blank? %>
  <div class="mt-4 p-5 bg-blue-50 border border-blue-200 text-blue-800 rounded-lg text-base">
    Selecciona doctor, fecha y horario para continuar con los datos del paciente.
  </div>
<% else %>
  <%= form_with scope: :appointment,
                url: admin_appointments_path,
                method: :post,
                data: { turbo_frame: "_top" },
                class: "space-y-6" do |f| %>

    <%= f.hidden_field :package_id, value: package.id %>
    <%= f.hidden_field :doctor_id,  value: doctor_id %>
    <%= f.hidden_field :start_date, value: (ts.respond_to?(:iso8601) ? ts.iso8601 : ts) %>
    <%= f.hidden_field :duration, value: duration %>
    <!-- reCAPTCHA como param top-level -->
    <%= hidden_field_tag :recaptcha_token, "", id: "recaptcha_token" %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      <div>
        <%= f.label :name, "Nombre", class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, required: true,
              class: "block w-full px-3 py-2 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :phone, "TelÃ©fono", class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= f.telephone_field :phone, required: true,
              class: "block w-full px-3 py-2 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :age, "Edad", class: "block text-base font-medium text-gray-700 mb-2" %>
        <%= f.number_field :age, min: 0, step: 1, required: true,
              class: "block w-full px-3 py-2 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>

    <div class="pt-2">
      <%= f.submit "Reservar cita",
            class: "w-full md:w-auto px-5 py-3 rounded-lg bg-blue-600 text-white hover:bg-blue-700 text-base font-semibold" %>
    </div>
  <% end %>
<% end %>
