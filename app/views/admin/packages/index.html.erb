<!-- app/views/admin/packages/index.html.erb -->
<h1>Manage Packages</h1>
<%= link_to 'New Package', new_admin_package_path, class: 'btn btn-primary' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.description %></td>
        <td><%= number_to_currency(package.price) %></td>
        <td><%= package.duration %> mins</td>
        <td>
          <%= link_to 'Show', admin_package_path(package) %> |
          <%= link_to 'Edit', edit_admin_package_path(package) %> |
          <%= link_to 'Delete', admin_package_path(package), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
