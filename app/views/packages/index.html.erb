<div class="container mx-auto px-4 py-8">
  <!-- Title Row -->
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold">Paquetes</h1>
  </div>

  <!-- Servicios Section -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-blue-600">Servicios</h2>
    <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-3">
      <% @packages.where(kind: 'servicios').each do |package| %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
          <h3 class="text-xl font-semibold mb-2">
            <%= link_to package.name, package_path(package), class: "text-blue-600 hover:underline" %>
          </h3>
          <% if package.image.present? %>
            <div class="mb-4">
              <%= image_tag package.image, alt: package.name, class: "w-full h-48 object-cover rounded-md" %>
            </div>
          <% end %>
          <p class="text-gray-700 mb-4"><%= package.description %></p>
          <p class="text-gray-900 font-bold mb-4">Price: <%= number_to_currency(package.price) %></p>
          <%= link_to "Agendar Cita", new_appointment_path(package_id: package.id), 
            class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition-colors duration-200",
            data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Paquetes Section -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-green-600">Paquetes</h2>
