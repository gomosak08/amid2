          <%= link_to "Agendar Cita", new_appointment_path(package_id: package.id), 
            class: "bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700 transition-colors duration-200",
            data: { turbo: false } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Cirugias Section -->
