<!-- app/views/devise/sessions/new.html.erb (or wherever your login form is located) -->

<div class="container mx-auto px-4 py-8 max-w-md">
  <h2 class="text-3xl font-bold mb-6 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
    <!-- Email Field -->
    <div class="field">
      <%= f.label :email, class: "block text-lg font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div class="field">
      <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Remember Me Checkbox -->
    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded mr-2" %>
        <%= f.label :remember_me, class: "text-gray-700" %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition-colors duration-200" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
