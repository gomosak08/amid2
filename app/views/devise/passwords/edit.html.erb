<!-- app/views/devise/passwords/edit.html.erb -->

<div class="container mx-auto px-4 py-8 max-w-md">
  <h2 class="text-3xl font-bold mb-6 text-center">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-6") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <!-- New Password Field -->
    <div class="field">
      <%= f.label :password, "New password", class: "block text-lg font-medium text-gray-700 mb-2" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500 mb-2 block">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-lg font-medium text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div class="actions">
      <%= f.submit "Change my password", class: "w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition-colors duration-200" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
