<!-- app/views/packages/show.html.erb -->

<style>
  /* Imagen grande, responsiva y sin recortes */
  .package-hero {
    width: 100%;
    height: clamp(480px, 75vh, 1000px); /* mínimo 480px, ideal 75vh, máximo 1000px */
    object-fit: contain;                /* no recorta; respeta proporción */
    background: #fff;
    border-radius: 0.5rem;
  }

  /* El wrapper no limita la altura ni recorta */
  .package-hero-wrap {
    max-height: none;
    overflow: visible;
  }

  /* Opcional: si quieres que JAMÁS se vea “pequeña” en pantallas muy altas */
  @media (min-height: 1000px) {
    .package-hero { height: 900px; } /* ajústalo si quieres */
  }
</style>

<div class="w-full mx-auto px-4 py-8"> <!-- quitamos max-w-* para no limitar -->
  <!-- Package Name -->
  <h1 class="text-4xl font-bold text-gray-800 mb-6 text-center"><%= @package.name %></h1>

  <!-- Package Image -->
  <% if @package.image.present? %>
    <div
      data-action="click->toggle-description#toggle"
      class="package-hero-wrap mb-8 cursor-pointer bg-gray-100 rounded-md flex items-center justify-center p-2">
      <%= image_tag @package.image,
            alt: @package.name,
            class: "package-hero" %>
      <!-- Si prefieres ocupar TODO el marco aunque se deforme, cambia object-fit a 'fill' en .package-hero -->
    </div>
  <% end %>

  <!-- Package Description -->
  <p class="text-lg text-gray-700 mb-6 text-center"><%= @package.description %></p>

  <!-- Package Price -->
  <p class="text-2xl font-semibold text-gray-900 text-center mb-8">
    Precio: <span class="text-blue-600"><%= number_to_currency(@package.price) %></span>
  </p>

  <!-- Action Button -->
  <div class="flex justify-center">
    <%= link_to "Agendar Cita", new_appointment_path(package_id: @package.id), 
            class: "bg-blue-600 text-white py-3 px-8 rounded-lg hover:bg-blue-700 transition duration-200" %>
  </div>
</div>
