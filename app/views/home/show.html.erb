<!-- app/views/packages/show.html.erb -->

<div class="max-w-4xl mx-auto px-4 py-8">
  <!-- Package Name -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center"><%= @package.name %></h1>

  <!-- Package Image -->
  <% if @package.image.present? %>
    <div class="flex justify-center mb-8">
      <%= image_tag @package.image, alt: @package.name, class: 'max-w-sm sm:max-w-md h-auto rounded-lg shadow-lg' %>
    </div>
  <% end %>

  <!-- Package Description -->
  <p class="text-lg text-gray-700 mb-6 text-center"><%= @package.description %></p>

  <!-- Package Price -->
  <p class="text-xl font-semibold text-gray-900 text-center mb-6">
    Precio: <span class="text-blue-600"><%= number_to_currency(@package.price) %></span>
  </p>

  <!-- Action Button -->
  <div class="flex justify-center">
    <%= link_to "Agendar Cita", new_appointment_path(package_id: @package.id), 
            class: "bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-200" %>
  </div>
</div>
