<!-- app/views/admin/appointments/_client_data_form.html.erb -->
<%= turbo_frame_tag "client_data_frame" do %>
  <%= form_with model: @appointment,
                url: admin_appointments_path(format: :turbo_stream),
                method: :post,
                local: false,
                data: { turbo_frame: "client_data_frame" },
                class: "space-y-6" do |f| %>

    <%= f.hidden_field :package_id, value: package.id %>
    <%= f.hidden_field :doctor_id,  value: doctor_id %>
    <%= f.hidden_field :start_date, value: time_slot %>

    <!-- Name -->
    <div>
      <%= f.label :name, "Nombre" %><br>
      <%= f.text_field :name, required: true, class: "form-control" %>
      <% if f.object.errors[:name].any? %>
        <div class="text-red-600"><%= f.object.errors[:name].join(", ") %></div>
      <% end %>
    </div>

    <!-- Age -->
    <div>
      <%= f.label :age, "Edad" %><br>
      <%= f.number_field :age, required: true, class: "form-control" %>
      <% if f.object.errors[:age].any? %>
        <div class="text-red-600"><%= f.object.errors[:age].join(", ") %></div>
      <% end %>
    </div>

    <!-- Phone -->
    <div>
      <%= f.label :phone, "TelÃ©fono" %><br>
      <%= f.telephone_field :phone, required: true, class: "form-control" %>
      <% if f.object.errors[:phone].any? %>
        <div class="text-red-600"><%= f.object.errors[:phone].join(", ") %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Agendar Cita", class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
