              method: :get,
              data: { turbo_frame: "appointment_form" },
              local: false,
              format: :turbo_stream do |f| %>

  <div class="field">
    <%= f.label :package_id, "Choose a package" %><br>
    <%= f.select :package_id,
                 packages.map { |p| [p.name, p.id] },
                 { prompt: "Selectâ€¦"},
                 class: "form-select" %>
  </div>

  <div class="actions">
    <%= f.submit "Next", class: "btn btn-primary" %>
  </div>
<% end %>
